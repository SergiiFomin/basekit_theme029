{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">
    <div class="global">
        <!--header-->
        <header>
            <div class="header">
                <div class="container navigation">
                    <div class="row">
                        <article class="span12">                            

                            <div class="row">
                                <article class="span8">
                                    {{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}
                                </article>
                                <article class="span4">
                                    {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com', 'linkedin':'http://www.linkedin.com', 'facebook': 'https://www.facebook.com', 'twitter': 'https://twitter.com', 'youtube': 'https://www.youtube.com', 'rss': '#'})|raw}}
                                </article>
                            </div>

                        </article>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <article class="span12">

                            <div class="row">
                                <article class="span6">
                                    {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                                </article>
                                <article class="span6">
                                    {{widget('profile', 'form', { 'profileType':'form'})|raw}}
                                </article>
                            </div>

                        </article>
                    </div>
                </div>
            </div>
        </header>
        <!--content-->
        <div class="contentInner">
            <div class="container">
                <div class="row">
                    <section class="span12">

                        {{widget('content', 'title1', {content: '<h2>Contact us</h2>', lines: 'all'})|raw}}                                
                        {{widget('map', 'map', {'height': '540', 'zoom': '15', 'address': 'profile'})|raw}}
                        {{widget('space', 'space', {'height': '30'})|raw}}

                        <div class="row">
                            <article class="span4">
                                
                                {{widget('content', 'title2', {content: '<h2>Addresses</h2>', lines: 'all'})|raw}}
                                {{widget('content', 'text1', {content: '<p class="color">Address 1:</p>', lines: 'all'})|raw}}
                                {{widget('profile', 'address1', { 'profileType':'address', 'address':'9870 St Vincent Place, Glasgow, DC 45 Fr 45.'})|raw}}

                                {{widget('content', 'text2', {content: '<p class="color">Phone:</p>', lines: 'all'})|raw}}
                                {{widget('content', 'text3', {content: '+1 800 559 6580<br />+1 800 603 6035', lines: 'all'})|raw}}

                                {{widget('content', 'text4', {content: '<p class="color">Address 2:</p>', lines: 'all'})|raw}}
                                {{widget('profile', 'address1', { 'profileType':'address', 'address':'9863 - 9867 Mill Road, Cambridge, MG09 99HT.'})|raw}}
                                
                            </article>
                            <article class="span8">
                                
                                {{widget('content', 'title3', {content: '<h2>Contact form</h2>', lines: 'all'})|raw}}
                                {{zone('main')|raw}}

                            </article>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <!--footer-->
        <footer>
            <div class="footer">
                <div class="container">
                    <div class="row">
                        <section class="span12">

                            {{widget('companyname', 'companyname', {"business": "Protecting"})|raw}}
                            {{widget('profile', 'copyright', { 'profileType':'copyright', 'copyright':'Â© 2014. All rights reserved'})|raw}}

                        </section>
                    </div>
                </div>
            </div>
        </footer>
    </div>    
</div>

{% endblock %}